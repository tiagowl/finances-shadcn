{
  "buildCommand": "cd src/backend; npm install --include=dev; npm run build",
  "functions": {
    "src/backend/api/index.ts": {
      "includeFiles": "src/backend/dist/**",
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/src/backend/api/index.ts"
    }
  ]
}

